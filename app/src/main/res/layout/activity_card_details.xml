<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassesCardDetailsActivity"
    android:background="@color/black">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="#115e59"
        android:id="@+id/title">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addNewTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_semibold"
            android:gravity="center"
            android:text="@string/cardDetailsText"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_marginHorizontal="128dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/light_teal"
        android:id="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/moduleName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_black"
                android:paddingVertical="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:lineSpacingExtra="5dp"
                android:text="Object Oriented Programming"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/activityIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/class_3d_icon"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="-20dp"/>


        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/moduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lineIcon1"
                android:layout_width="185dp"
                android:layout_height="200dp"
                android:src="@drawable/purple_line_icon"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="-4dp"/>

            <ImageView
                android:id="@+id/lineIcon2"
                android:layout_width="185dp"
                android:layout_height="200dp"
                android:src="@drawable/yellow_line_icon"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="-10dp"/>


        </LinearLayout>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/moduleName"
            android:layout_marginTop="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/calendarIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/calendar_today_24"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/dayText"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_18pt_semibold"
                        android:text="Sun"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/clockIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_access_time_filled_24"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_18pt_semibold"
                        android:text="17:30 - 19:30"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location_pin_24"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_18pt_semibold"
                        android:text="Room 402"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="0dp">

                    <ImageView
                        android:id="@+id/personIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_person_24"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/lecturerNameText"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_18pt_semibold"
                        android:text="Ms. Karen Khor"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/examsCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#115e59">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_black"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Upcomming Exams"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/examsCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/examsCardTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-6dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="@color/light_teal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_18pt_semibold"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:lineSpacingExtra="5dp"
                    android:text="No Exams Due"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="left"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Exam"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    android:layout_marginVertical="5dp"
                    android:backgroundTint="@color/black"
                    android:textColorHint="@color/light_teal"
                    android:layout_gravity="center"
                    android:gravity="center"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_18pt_semibold"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:lineSpacingExtra="5dp"
                    android:text="Coursework 1"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_18pt_semibold"
                    android:paddingVertical="10dp"
                    android:lineSpacingExtra="5dp"
                    android:text="Due: Nov 17, 11:59 PM"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Delete and Update Class Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center"
            android:fontFamily="@font/inter_18pt_semibold"
            android:textSize="18sp"
            android:text="Delete Class"
            android:backgroundTint="#e53e3e"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/updateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center"
            android:fontFamily="@font/inter_18pt_semibold"
            android:textSize="18sp"
            android:text="Update Class"
            android:backgroundTint="@color/light_teal"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"/>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>